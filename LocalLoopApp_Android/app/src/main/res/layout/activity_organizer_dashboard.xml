<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.dashboard_activities.OrganizerDashboardActivity">

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#673AB7"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/logoIcon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/locallooplogo"
            android:contentDescription="LocalLoop Logo"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/organizerToolbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Organizer Dashboard"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Main Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_marginBottom="56dp"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <!-- ðŸŸª Welcome + Stats Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/welcomeStatsCardContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:elevation="2dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="#F2E7FB"
            android:animateLayoutChanges="true">

            <LinearLayout
                android:id="@+id/welcomeStatsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <!-- ðŸ‘‹ Welcome Message -->
                <TextView
                    android:id="@+id/tvWelcomeMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome! You are logged in as Organizer."
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <!-- ðŸ“Š Stats Row: Upcoming / Past -->
                <LinearLayout
                    android:id="@+id/statsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="8dp">

                    <TextView
                        android:id="@+id/tvUpcomingEvents"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Upcoming: 0"
                        android:textStyle="bold"
                        android:padding="4dp" />

                    <TextView
                        android:id="@+id/tvPastEvents"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Past Events: 0"
                        android:textStyle="bold"
                        android:padding="4dp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

            <!-- separator line -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DDDDDD"
                android:layout_marginVertical="2dp" />

        <!-- ðŸ”µ Filter Spinner (styled like a button, placed below card) -->
        <Spinner
            android:id="@+id/eventFilterSpinner"
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="12dp"
            android:spinnerMode="dropdown"
            android:background="@null"
            android:layout_marginTop="24dp"
            />

        <!-- ðŸ“‹ Events List Container -->
        <LinearLayout
            android:id="@+id/eventListContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:divider="?android:attr/dividerHorizontal"
            android:showDividers="middle"
            android:dividerPadding="8dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Floating Create Event Button | FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabCreateEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="72dp"
        android:contentDescription="Create Event"
        android:src="@drawable/ic_add"
        app:tint="#FFF6FC"
        app:fabSize="normal"
        app:maxImageSize="36dp"
        android:scaleType="centerInside"
        android:backgroundTint="#673AB7" />

    <!-- Bottom Navigation Bar (same as Admin) -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:weightSum="3"
        android:elevation="8dp"
        android:paddingVertical="4dp">

        <ImageButton
            android:id="@+id/btnProfile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/profilebutton"
            android:background="@android:color/transparent"
            android:contentDescription="Profile"
            android:scaleType="centerInside" />

        <ImageButton
            android:id="@+id/btnHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/homebutton"
            android:background="@android:color/transparent"
            android:contentDescription="Home"
            android:scaleType="centerInside" />

        <ImageButton
            android:id="@+id/btnNotifications"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/notificationcentrebutton"
            android:background="@android:color/transparent"
            android:contentDescription="Notification Center"
            android:scaleType="centerInside" />
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
